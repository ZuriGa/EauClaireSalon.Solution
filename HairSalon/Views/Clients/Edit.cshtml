@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="card-header">
  <h2>Edit</h2>
</div>

<br />
<div class="card-columns">

  <div class="card-body">
    <h4>Edit this Client: @Html.DisplayFor(model => model.Name)</h4>

    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name, "Name :")
      @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
      <br />
      @Html.LabelFor(model => model.PhoneNumber, "Phone Number :")
      @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
      <br />
      @Html.LabelFor(model => model.Notes, "Notes :")
      @Html.TextAreaFor(model => model.Notes, new { @class = "form-control" })
      <br />
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")

      <input type="submit" value="Save" class="btn btn-outline-light text-dark btn-lg" />
    }
  </div>

  <br />
  <button type="button" class="btn btn-outline-light text-dark btn-lg">@Html.ActionLink("Back to list",
    "Index")</button>
</div>