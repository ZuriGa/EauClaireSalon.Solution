@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="card-header">
  <h1>Clients</h1>
</div>

<div class="card-body">
  @if (@Model.Count == 0)
  {
    <h3>No Clients have been added yet‚ùï</h3>
  }
  else
  {
    <ul class="list-group">
      @foreach (Client client in Model)
      {
        <h5>
          <li class="list-group-item">Name: @Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | <small>Stylist :</small>
            @client.Stylist.Name</li>
        </h5>
      }
    </ul>
  }

  <br />
  <button type="button" class="btn btn-outline-light text-dark btn-lg">@Html.ActionLink("Add new client",
    "Create")</button>
  <button type="button" class="btn btn-outline-light text-dark btn-lg">@Html.ActionLink("Home", "Index",
    "Home")</button>
</div>