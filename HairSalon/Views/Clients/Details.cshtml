@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Client Details</h2>
<hr />

<div class="card-body">
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Notes): @Html.DisplayFor(model => model.Notes)</h3>
<h4>@Html.DisplayNameFor(model => model.PhoneNumber, "Phone Number"): @Html.DisplayFor(model => model.PhoneNumber)</h4>
<h5>@Html.DisplayNameFor(model => model.AppointmentDate, "Appointment Date"): @Html.DisplayFor(model => model.AppointmentDate, "{0:MM/dd/yyyy}", new { @class = "form-control" })</h5>


<br />
<h4>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.Name)</h4>
</div>

<br />
