@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="card-header">
  <h3>Add new stylist</h3>
</div>  

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name :")
  @Html.TextBoxFor(model => model.Name)
  <br />
  @Html.LabelFor(model => model.PhoneNumber, "Phone Number :")
  @Html.TextBoxFor(model => model.PhoneNumber)
  <br />
  @Html.LabelFor(model => model.HireDate, "Hire Date :")
  @Html.TextBoxFor(model => model.HireDate)
  <br />
  <input type="submit" value="Add new stylist" />
}

<p>@Html.ActionLink("Show all stylist", "Index")
</p>