@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div class="card-header">
  <h1>Stylist ✨</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet❕</h3>
}


<div class="card-columns">
  @foreach (Stylist stylist in Model)
  {
    <div class="card-body">
      <h5 class="card-title">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId }) </h5>
    </div>
  }
</div>

<br/>
<button type="button" class="btn btn-outline-light text-dark btn-lg">@Html.ActionLink("Add new Stylist ✨", "Create")</button>
<button type="button" class="btn btn-outline-light text-dark btn-lg">@Html.ActionLink("Add new Client 💅", "Create", "Clients")</button>
<button type="button" class="btn btn-outline-light text-dark btn-lg">@Html.ActionLink("Home", "Index", "Home")</button>
